---
import { getAllPosts, getPost } from "../../../lib/client";
import Layout from "../../../layouts/layout.astro";
import Button from "../../../components/button.astro";

export async function getStaticPaths() {
  const data = await getAllPosts();
  const allPosts = data.publication.posts.edges;
  return allPosts.map((post) => {
    return {
      params: { slug: post.node.slug },
    };
  });
}
const { slug } = Astro.params;
const post = await getPost(slug);
---

<Layout title={post.title}>
  <div class="container">
    <div class="blogHeader">
      <div
        class="coverImage"
        style={`background-image: url(${post.coverImage.url})`}
      >
      </div>
      <h1 class="title">{post.title}</h1>
      <div class="meta">
        <div class="author">
          <img src="/thumbnail.jpg" alt="logoAuthor" class="authorImage" />
          <span>Admin Cheche Cakes</span>
        </div>
        <div class="readTime">{post.readTimeInMinutes} menit membaca</div>
      </div>
    </div>

    <div class="content">
      <Fragment set:html={post.content.html} />
    </div>

    <div class="actions">
      <Button href="/blog">Kembali ke daftar blog</Button>
    </div>
  </div>
</Layout>

<style>
  .container {
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 24px;
    align-items: flex-start;
    justify-content: flex-start;
    align-self: stretch;
    flex: 1;
    position: relative;
    overflow-y: scroll;
  }

  .container::-webkit-scrollbar {
    display: none;
  }

  .blogHeader {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    /* margin-bottom: 24px; */
  }

  .coverImage {
    width: 100%;
    height: 300px;
    border-radius: 4px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border: 1px solid #000000;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 1);
  }

  .title {
    color: #000000;
    font-size: 28px;
    line-height: 36px;
    font-weight: 600;
    margin: 16px 0 0 0;
  }

  .meta {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    margin-top: 8px;
  }

  .author {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
  }

  .authorImage {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
  }

  .readTime {
    color: #808080;
    font-size: 14px;
    line-height: 20px;
  }

  .content {
    width: 100%;
    font-size: 16px;
    line-height: 1.6;
    color: #333333;
  }

  .content :global(h1),
  .content :global(h2),
  .content :global(h3),
  .content :global(h4),
  .content :global(h5),
  .content :global(h6) {
    margin-top: 24px;
    margin-bottom: 16px;
    color: #000000;
    font-weight: 600;
  }

  .content :global(h2) {
    font-size: 24px;
    line-height: 32px;
  }

  .content :global(h3) {
    font-size: 20px;
    line-height: 28px;
  }

  .content :global(p) {
    margin-bottom: 16px;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 16px 0;
    border: 1px solid #000000;
  }

  .content :global(a) {
    color: #351500;
    text-decoration: underline;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 16px;
    padding-left: 24px;
  }

  .content :global(li) {
    margin-bottom: 8px;
  }

  .content :global(blockquote) {
    border-left: 4px solid #000000;
    padding-left: 16px;
    margin-left: 0;
    margin-right: 0;
    font-style: italic;
    color: #555555;
  }

  .content :global(pre) {
    background-color: #f5f5f5;
    padding: 16px;
    border-radius: 4px;
    overflow-x: auto;
    margin: 16px 0;
    border: 1px solid #000000;
  }

  .content :global(code) {
    font-family: monospace;
    background-color: #f5f5f5;
    padding: 2px 4px;
    border-radius: 2px;
  }

  .actions {
    /* margin-top: 32px; */
    width: 100%;
    display: flex;
    justify-content: center;
  }
</style>
